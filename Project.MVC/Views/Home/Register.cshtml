@using Project.MVC.Models.PageVMs
@model LoginPageVM

<form asp-action="Register" asp-controller="Home" method="post" class="p-3 w-75 m-auto">

    <div class="mb-3">
        <label>Kullanıcı ismini giriniz</label>
        <input asp-for="AppUser.UserName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Sifre giriniz</label>
        <input asp-for="AppUser.Password" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="as">Email giriniz</label>
        <input asp-for="AppUser.Email" class="form-control" itemid="as"/>
    </div>

    <div class="mb-3">
        <button class="btn btn-primary">Kayıt ol</button>
    </div>

</form>